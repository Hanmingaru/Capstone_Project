<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="CapstoneProject" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetAPI="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- ToolBar -->
    <style name="ToolBarTitle" parent="">
        <item name="colorPrimary">@color/red</item>
        <item name="fontFamily">@font/balsamiqbold</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="RecipeTitle" parent="">
        <item name="fontFamily">@font/oswaldtitle</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RecipeDesc" parent="">
        <item name="fontFamily">@font/oswaldtext</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Tab -->
    <style name="TabTheme" parent="">
        <item name="colorPrimary">@color/red</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/red</item>
    </style>

    <style name="TabStyle" parent="">
        <item name="tabTextAppearance">@style/TabTitle</item>
    </style>

    <style name="TabTitle" parent="">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="SearchBarStyle" parent="">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>

</resources>